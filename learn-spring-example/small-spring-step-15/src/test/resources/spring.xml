<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="userService" class="org.learn.spring.test.beans.UserService">
    <property name="token" value="RejDlI78hu223Opo983Ds"/>
  </bean>

  <bean class="org.learn.spring.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

  <bean id="beforeAdvice" class="org.learn.spring.test.beans.UserServiceBeforeAdvice"/>

  <bean id="methodInterceptor"
    class="org.learn.spring.aop.framework.adapter.MethodBeforeAdviceInterceptor">
    <property name="advice" ref="beforeAdvice"/>
  </bean>

  <bean id="pointcutAdvisor" class="org.learn.spring.aop.aspectj.AspectJExpressionPointcutAdvisor">
    <property name="expression" value="execution(* org.learn.spring.test.beans.IUserService.*(..))"/>
    <property name="advice" ref="methodInterceptor"/>
  </bean>

</beans>
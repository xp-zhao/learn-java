<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <servlet>
    <servlet-name>AnnotationHandleServlet</servlet-name>
    <servlet-class>com.xp.servlet.AnnotationHandleServlet</servlet-class>
    <init-param>
      <description>配置要扫描包及其子包, 如果有多个包,以逗号分隔</description>
      <param-name>basePackage</param-name>
      <param-value>com.xp.controller,com.xp.ui</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <!-- 拦截所有以 .do 结尾的请求 -->
    <servlet-name>AnnotationHandleServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

</web-app>
